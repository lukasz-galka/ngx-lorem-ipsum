{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "noUnusedParameters": true,
    "lib": ["es6", "dom"],
    "rootDir": ".",
    "types": [
      "node"
    ]
  },
  "files": [
    "lib/index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : false
  }
}
